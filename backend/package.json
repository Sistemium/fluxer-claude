{
  "name": "fluxer-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"npm run start\"",
    "build": "tsc",
    "start": "node -r dotenv-flow/config dist/server.js",
    "worker": "node -r dotenv-flow/config dist/worker.js",
    "dev:worker": "tsc-watch --onSuccess \"npm run worker\"",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write src/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "INTEGRATION_TEST=true jest --testPathPattern=integration"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.830.0",
    "@aws-sdk/client-eventbridge": "^3.830.0",
    "@aws-sdk/client-s3": "^3.832.0",
    "@aws-sdk/client-sqs": "^3.831.0",
    "@koa/cors": "^5.0.0",
    "@koa/multer": "^3.0.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "bull": "^4.12.2",
    "dotenv-flow": "^4.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-router": "^12.0.1",
    "mongoose": "^8.0.3",
    "mqtt": "^5.13.1",
    "socket.io": "^4.8.1",
    "supertokens-node": "^18.0.3",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/jest": "^30.0.0",
    "@types/koa": "^2.13.12",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/mqtt": "^0.0.34",
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^8.53.0",
    "jest": "^30.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  }
}
